<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_basic">

    <ImageView
        android:id="@+id/current_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height"
        android:padding="@dimen/padding_basic"
        android:scaleType="centerCrop"
        android:src="@drawable/carynska" />

    <TextView
        android:id="@+id/current_name"
        style="@style/TextStyle_1"
        android:layout_margin="@dimen/margin_basic"
        android:text="@string/current_name" />

    <TextView
        android:id="@+id/current_localization"
        style="@style/TextStyle_2"
        android:paddingBottom="@dimen/padding_small"
        android:text="@string/current_localization" />

    <TextView
        android:id="@+id/current_description"
        style="@style/TextStyle_3"
        android:text="@string/current_description" />
</LinearLayout>
</ScrollView>